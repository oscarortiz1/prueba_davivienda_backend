rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // FUNCIONES HELPER
    // ============================================
    
    // Verificar que el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Verificar que el usuario es el dueño del recurso
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Verificar que un campo existe en el documento
    function hasField(field) {
      return field in request.resource.data;
    }
    
    // Verificar que un campo no ha cambiado
    function fieldUnchanged(field) {
      return request.resource.data[field] == resource.data[field];
    }
    
    // ============================================
    // REGLAS PARA USUARIOS
    // ============================================
    
    match /users/{userId} {
      // Leer: Cualquier usuario autenticado puede ver perfiles
      // (necesario para mostrar nombres en encuestas compartidas)
      allow read: if isAuthenticated();
      
      // Crear: Solo puedes crear tu propio perfil
      // Y debe incluir los campos requeridos
      allow create: if isAuthenticated() && 
                      request.auth.uid == userId &&
                      hasField('name') &&
                      hasField('email') &&
                      request.resource.data.email == request.auth.token.email;
      
      // Actualizar: Solo tu propio perfil
      // Y NO puedes cambiar el email ni el ID
      allow update: if isOwner(userId) &&
                      fieldUnchanged('email');
      
      // Eliminar: Solo tu propio perfil
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // REGLAS PARA ENCUESTAS
    // ============================================
    
    match /surveys/{surveyId} {
      // Leer: Encuestas publicadas O tus propias encuestas
      allow read: if isAuthenticated() && 
                    (resource.data.isPublished == true || 
                     resource.data.createdBy == request.auth.uid);
      
      // Crear: Solo usuarios autenticados
      // Campos requeridos: title, description, createdBy
      // El createdBy debe ser tu UID
      allow create: if isAuthenticated() && 
                      hasField('title') &&
                      hasField('description') &&
                      hasField('createdBy') &&
                      request.resource.data.createdBy == request.auth.uid &&
                      request.resource.data.title is string &&
                      request.resource.data.title.size() > 0 &&
                      request.resource.data.title.size() <= 200 &&
                      request.resource.data.description is string &&
                      request.resource.data.description.size() <= 1000;
      
      // Actualizar: Solo el creador puede editar
      // Y NO puede cambiar el campo createdBy
      allow update: if isAuthenticated() && 
                      resource.data.createdBy == request.auth.uid &&
                      fieldUnchanged('createdBy') &&
                      request.resource.data.title.size() > 0 &&
                      request.resource.data.title.size() <= 200;
      
      // Eliminar: Solo el creador
      allow delete: if isAuthenticated() && 
                      resource.data.createdBy == request.auth.uid;
    }
    
    // ============================================
    // REGLAS PARA RESPUESTAS A ENCUESTAS
    // ============================================
    
    match /surveyResponses/{responseId} {
      // Leer: Solo el que respondió O el dueño de la encuesta
      allow read: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid || 
                     get(/databases/$(database)/documents/surveys/$(resource.data.surveyId)).data.createdBy == request.auth.uid);
      
      // Crear: Cualquiera autenticado puede responder
      // El userId debe ser tu UID
      // La encuesta debe existir y estar publicada
      allow create: if isAuthenticated() &&
                      hasField('userId') &&
                      hasField('surveyId') &&
                      request.resource.data.userId == request.auth.uid &&
                      exists(/databases/$(database)/documents/surveys/$(request.resource.data.surveyId)) &&
                      get(/databases/$(database)/documents/surveys/$(request.resource.data.surveyId)).data.isPublished == true;
      
      // No se permite actualizar respuestas (integridad de datos)
      allow update: if false;
      
      // Solo el que respondió puede eliminar su respuesta (GDPR)
      allow delete: if isAuthenticated() && 
                      resource.data.userId == request.auth.uid;
    }
    
    // ============================================
    // POR DEFECTO: DENEGAR TODO
    // ============================================
    
    // Cualquier otra colección o documento: DENEGADO
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
